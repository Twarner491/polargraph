[Unit]
Description=Polargraph Web Interface
After=network.target avahi-daemon.service
Wants=avahi-daemon.service

[Service]
Type=simple
User=root
WorkingDirectory=/home/monalisa/polargraph/src
ExecStart=/home/monalisa/polargraph/venv/bin/python -m gunicorn --worker-class eventlet -w 1 --bind 0.0.0.0:80 app:app
Restart=always
RestartSec=5
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target

